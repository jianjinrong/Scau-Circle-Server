<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pinnuli.dao.SquareDao">

    <!--保存消息-->
    <insert id="save" parameterType="com.pinnuli.model.Square"
            useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO circle_square
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="userId != null" >
                user_id,
            </if>
            <if test="columnId != null" >
                column_id,
            </if>
            <if test="title != null" >
                title,
            </if>
            <if test="content != null" >
                content,
            </if>
            <if test="phone != null" >
                phone,
            </if>
            <if test="wechat != null" >
                wechat,
            </if>
            <if test="price != null" >
                price,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="userId != null" >
                #{userId},
            </if>
            <if test="columnId != null" >
                #{columnId},
            </if>
            <if test="title != null" >
                #{title},
            </if>
            <if test="content != null" >
                #{content},
            </if>
            <if test="phone != null" >
                #{phone},
            </if>
            <if test="wechat != null" >
                #{wechat},
            </if>
            <if test="price != null" >
                #{price},
            </if>
        </trim>
    </insert>

    <!--检验是否需要联系人信息-->
    <select id="checkIsContact" parameterType="string" resultType="int">
        SELECT is_goods FROM circle_square_column
        WHERE NAME = #{column}
    </select>

    <!--校验是否是交易信息-->
    <select id="checkIsGoods" parameterType="string" resultType="int">
        SELECT is_goods, id FROM circle_square_column
        WHERE NAME = #{column}
    </select>

</mapper>
