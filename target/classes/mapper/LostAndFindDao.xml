<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pinnuli.dao.LostAndFindDao">

    <!--保存失物招领消息-->
    <insert id="save" parameterType="com.pinnuli.model.LostAndFind"
            useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO circle_square_lost(user_id, title, content, phone, wechat)
        VALUES (#{user_id}, #{title}, #{content}, #{phone}, #{wechat})
    </insert>

</mapper>
